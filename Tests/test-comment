// Testprogramm für Kommentarkonvention
      // das Programm ist test-1

{			
int i; int j; float v;  // unverändert bis hier
float x; float[100] a;
	// Leerzeilen zum Test der Zeilenzählers
while (true) {
	do i = i+1; while (a[i] < v);  /// klappt auch?
	do j = j-1; while (a[j] > v);
	if (i >= j) break;
	x = a[i]; a[i] = a[j]; a[j] *= x; // der Fehler hier sollte auf Zeile 12 verweisen
	}
}
.
